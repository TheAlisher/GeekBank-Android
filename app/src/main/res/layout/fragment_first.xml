<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.fragments.pincode.FirstFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/content_top"
        app:layout_constraintGuide_percent="0.15"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/content_top"
        app:layout_constraintVertical_bias="1"
        android:layout_marginBottom="15dp"
        android:textColor="#F3F3F3"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

      <LinearLayout
          android:id="@+id/view_ovals"
          app:layout_constraintVertical_bias="0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@id/layer_1"
          app:layout_constraintTop_toBottomOf="@id/content_top"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center|bottom">


          <View
              android:id="@+id/view_oval_1"
              android:layout_marginHorizontal="15dp"
              android:background="@drawable/view_grey_oval"
              style="@style/view_oval"/>

          <View
              android:id="@+id/view_oval_2"
              android:layout_marginHorizontal="15dp"
              android:background="@drawable/view_grey_oval"
              style="@style/view_oval"/>

          <View
              android:id="@+id/view_oval_3"
              android:layout_marginHorizontal="15dp"
              android:background="@drawable/view_grey_oval"
              style="@style/view_oval" />

          <View
              android:id="@+id/view_oval_4"
              android:layout_marginHorizontal="15dp"
              android:background="@drawable/view_grey_oval"
              style="@style/view_oval"/>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/layer_1"
          android:gravity="center_horizontal|center_vertical"
          app:layout_constraintBottom_toTopOf="@id/layer_2"
          android:layout_marginHorizontal="30dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginBottom="10dp"
          android:layout_width="match_parent"
          android:layout_height="85dp"
          android:orientation="horizontal"
          >

          <com.google.android.material.button.MaterialButton
              android:id="@+id/btn_01"
              android:layout_width="75dp"
              android:layout_height="match_parent"
              android:backgroundTint="@color/white"
              app:cornerRadius="40dp"
              android:textSize="32sp"
              android:text="1"
              android:textColor="@color/black"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/btn_02"
              android:layout_marginHorizontal="30dp"
              android:layout_width="75dp"
              android:layout_height="match_parent"
              android:backgroundTint="@color/white"
              app:cornerRadius="40dp"
              android:textSize="32sp"
              android:text="2"
              android:textColor="@color/black"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/btn_03"
              android:layout_width="75dp"
              android:layout_height="match_parent"
              android:backgroundTint="@color/white"
              app:cornerRadius="40dp"
              android:textSize="32sp"
              android:text="3"
              android:textColor="@color/black"/>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/layer_2"
          app:layout_constraintBottom_toTopOf="@id/layer_3"
          android:layout_marginHorizontal="30dp"
          android:gravity="center_horizontal|center_vertical"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginBottom="10dp"
          android:layout_width="match_parent"
          android:layout_height="85dp"
          android:orientation="horizontal">

          <com.google.android.material.button.MaterialButton
              android:id="@+id/btn_04"
              android:layout_width="75dp"
              android:layout_height="match_parent"
              android:backgroundTint="@color/white"
              app:cornerRadius="40dp"
              android:textSize="32sp"
              android:text="4"
              android:textColor="@color/black"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/btn_05"
              android:layout_marginHorizontal="30dp"
              android:layout_width="75dp"
              android:layout_height="match_parent"
              android:backgroundTint="@color/white"
              app:cornerRadius="40dp"
              android:textSize="32sp"
              android:text="5"
              android:textColor="@color/black"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/btn_06"
              android:layout_width="75dp"
              android:layout_height="match_parent"
              android:backgroundTint="@color/white"
              app:cornerRadius="40dp"
              android:textSize="32sp"
              android:text="6"
              android:textColor="@color/black"/>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/layer_3"
          app:layout_constraintBottom_toTopOf="@id/layer_4"
          android:layout_marginHorizontal="30dp"
          android:gravity="center_horizontal|center_vertical"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginBottom="10dp"
          android:layout_width="match_parent"
          android:layout_height="85dp"
          android:orientation="horizontal">

          <com.google.android.material.button.MaterialButton
              android:id="@+id/btn_07"
              android:layout_width="75dp"
              android:layout_height="match_parent"
              android:backgroundTint="@color/white"
              app:cornerRadius="40dp"
              android:textSize="32sp"
              android:text="7"
              android:textColor="@color/black"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/btn_08"
              android:layout_marginHorizontal="30dp"
              android:layout_width="75dp"
              android:layout_height="match_parent"
              android:backgroundTint="@color/white"
              app:cornerRadius="40dp"
              android:textSize="32sp"
              android:text="8"
              android:textColor="@color/black"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/btn_09"
              android:layout_width="75dp"
              android:layout_height="match_parent"
              android:backgroundTint="@color/white"
              app:cornerRadius="40dp"
              android:textSize="32sp"
              android:text="9"
              android:textColor="@color/black"/>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/layer_4"
          android:layout_marginHorizontal="30dp"
          app:layout_constraintBottom_toTopOf="@id/content_bottom"
          android:gravity="center_horizontal|center_vertical"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_width="match_parent"
          android:layout_height="85dp"
          android:orientation="horizontal">

          <ImageButton
              android:id="@+id/btn_fingerprint"
              android:layout_width="75dp"
              android:layout_height="75dp"
              android:src="@drawable/fingerprint"
              android:background="@drawable/rounded_shape"
             />

          <com.google.android.material.button.MaterialButton
              android:id="@+id/btn_0"
              android:layout_width="75dp"
              android:layout_height="match_parent"
              android:layout_marginHorizontal="30dp"
              android:backgroundTint="@color/white"
              app:cornerRadius="40dp"
              android:textSize="32sp"
              android:text="0"
              android:textColor="@color/black"/>

          <ImageButton
              android:id="@+id/btn_clear"
              android:src="@drawable/delete"
              android:layout_width="75dp"
              android:layout_height="75dp"
              android:background="@drawable/rounded_shape" />

      </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/content_bottom"
        app:layout_constraintGuide_percent="0.85"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/description_fingerprint"
        android:text="@string/forgot_password"
        app:layout_constraintTop_toBottomOf="@id/content_bottom"
        android:textColor="#898585"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/description_fingerprint"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        android:text="error"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>