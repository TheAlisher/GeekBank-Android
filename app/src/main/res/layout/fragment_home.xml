<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.fragments.home.HomeFragment">

<LinearLayout
    android:id="@+id/card_anim"
    android:layout_width="160dp"
    android:layout_height="220dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    >

    <TextView
        android:id="@+id/cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:text="Total balance" />

    <TextView
        android:id="@+id/tv_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cash"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:text="$ 20,000.45" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/qr_code"
        android:layout_width="70dp"
        android:layout_height="45dp"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_qrcode"
        app:iconSize="25dp"
        app:iconGravity="top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cash"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR code"
        app:layout_constraintTop_toBottomOf="@id/qr_code"
        app:layout_constraintLeft_toLeftOf="@id/qr_code"
        android:textColor="@color/white"
        android:layout_marginLeft="50dp"
        android:textSize="12dp"/>

</LinearLayout>

    <ImageView
        android:id="@+id/iv_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/visa"
        app:layout_constraintStart_toEndOf="@+id/card_anim"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>