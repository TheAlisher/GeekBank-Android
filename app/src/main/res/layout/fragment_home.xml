<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    tools:context=".presentation.ui.fragments.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ScrollViewCount"
        tools:layout_editor_absoluteX="-58dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/card_anim"
                android:layout_width="160dp"
                android:layout_height="220dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="50dp"
                    android:text="Total balance"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cash" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/qr_code"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="40dp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_qrcode"
                    app:iconGravity="top"
                    app:iconSize="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_cash" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="QR code"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:layout_constraintLeft_toLeftOf="@id/qr_code"
                    app:layout_constraintTop_toBottomOf="@id/qr_code" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/visa"
                app:layout_constraintStart_toEndOf="@+id/card_anim"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_show_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="500dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:text="See All"
                android:textSize="14sp"
                android:textColor="@color/purple_200"
                app:layout_constraintBottom_toTopOf="@id/recycler_news"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_first" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/map1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:itemCount="3"
                tools:listitem="@layout/item_news" />

            <TextView
                android:id="@+id/txt_show_all_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:textColor="@color/purple_200"
                app:layout_constraintBottom_toTopOf="@id/map1"
                app:layout_constraintRight_toRightOf="@id/map1"
                android:layout_marginBottom="10dp"
                 />

            <TextView
                android:id="@+id/txt_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest News"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/txt_show_all"

                app:layout_constraintLeft_toLeftOf="@id/recycler_news"
                android:layout_marginLeft="30dp"
                />


            <androidx.cardview.widget.CardView
                android:id="@+id/map1"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_news"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="40dp"
                android:layout_height="wrap_content">

                <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                />
            </androidx.cardview.widget.CardView>


            <ImageView
                android:id="@+id/image"
                android:layout_width="350dp"
                android:layout_marginTop="100dp"
                android:layout_height="350dp"
                app:layout_constraintTop_toBottomOf="@id/map1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

