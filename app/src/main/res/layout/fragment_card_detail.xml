<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="10dp"
    tools:context=".presentation.ui.fragments.cardDetail.CardDetailFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Card detail"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/image_arrow"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_recycler"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_arrow"
         />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/list_recycler">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_horizontal"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_marginStart="35dp"
            android:insetLeft="0dp"
            android:background="@drawable/button_gradient"
            android:insetRight="0dp"
            android:layout_marginTop="10dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:backgroundTint="@null"
            app:icon="@drawable/arrowshorizontal"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Transfer"
            android:textColorHint="#8E8E93"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/button_horizontal"
            app:layout_constraintStart_toStartOf="@+id/button_horizontal"
            app:layout_constraintTop_toBottomOf="@id/button_horizontal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_wallet"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/button_gradient"
            app:backgroundTint="@null"
            app:icon="@drawable/wallet"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintStart_toEndOf="@id/button_horizontal"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_payments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Payments"
            android:textColorHint="#8E8E93"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/button_wallet"
            app:layout_constraintStart_toStartOf="@+id/button_wallet"
            app:layout_constraintTop_toBottomOf="@id/button_wallet" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_exchange"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_marginStart="30dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:layout_marginTop="10dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:backgroundTint="@null"
            android:background="@drawable/button_gradient"
            app:icon="@drawable/currency"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintStart_toEndOf="@id/button_wallet"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Exchange"
            android:textColorHint="#8E8E93"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/button_exchange"
            app:layout_constraintStart_toStartOf="@+id/button_exchange"
            app:layout_constraintTop_toBottomOf="@id/button_exchange" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonQR"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:backgroundTint="@null"
            android:background="@drawable/button_gradient"
            app:icon="@drawable/qrcode"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_transfer" />

        <TextView
            android:id="@+id/txt_QR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="QR"
            android:textColorHint="#8E8E93"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/buttonQR"
            app:layout_constraintStart_toStartOf="@+id/buttonQR"
            app:layout_constraintTop_toBottomOf="@id/buttonQR" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_freeze_card"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:background="@drawable/button_gradient"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:backgroundTint="@null"
            app:icon="@drawable/snowflake"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintStart_toEndOf="@id/buttonQR"
            app:layout_constraintTop_toBottomOf="@id/txt_payments" />

        <TextView
            android:id="@+id/txt_freeze_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Freeze Card"
            android:textColorHint="#8E8E93"
            android:textSize="15sp"
            android:maxEms="5"
            app:layout_constraintEnd_toEndOf="@+id/button_freeze_card"
            app:layout_constraintStart_toStartOf="@+id/button_freeze_card"
            app:layout_constraintTop_toBottomOf="@id/button_freeze_card" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_settings"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:backgroundTint="@null"
            android:background="@drawable/button_gradient"
            app:icon="@drawable/settingsadjust"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintStart_toEndOf="@id/button_freeze_card"
            app:layout_constraintTop_toBottomOf="@id/txt_exchange" />

        <TextView
            android:id="@+id/txt_settings"
            android:layout_width="53dp"
            android:layout_height="17dp"
            android:hint="Settings"
            android:textColorHint="#8E8E93"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/button_settings"
            app:layout_constraintStart_toStartOf="@+id/button_settings"
            app:layout_constraintTop_toBottomOf="@id/button_settings" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/bottom_sheet_include"
            layout="@layout/bottom_sheet" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


