<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_cardFragment"
            app:destination="@id/cardFragment"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/cardFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.home.cards.CardFragment"
        android:label="fragment_card"
        tools:layout="@layout/fragment_card" >
        <action
            android:id="@+id/action_cardFragment_to_homeFragment2"
            app:destination="@id/homeFragment" />
    </fragment>
        <action
            android:id="@+id/action_cardFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    <fragment
        android:id="@+id/pinCodeFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.pincode.CreatePinCodeFragment"
        android:label="fragment_pin_code"
        tools:layout="@layout/fragment_create_pin_code" >
        <action
            android:id="@+id/action_pinCodeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputPinCodeFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.pincode.InputPinCodeFragment"
        android:label="InputPinCodeFragment" >

        <action
            android:id="@+id/action_inputPinCodeFragment_to_biometricFragment"
            app:destination="@id/biometricFragment"
            app:popUpTo="@id/nav_graph" />
        <action
            android:id="@+id/action_inputPinCodeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/biometricFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.biometricauthentication.BiometricFragment"
        android:label="fragment_biometric"
        tools:layout="@layout/fragment_biometric" >
        <action
            android:id="@+id/action_biometricFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/allNews"
        android:name="com.alish.geekbank.presentation.ui.fragments.home.allnews.AllNews"
        android:label="fragment_all_news"
        tools:layout="@layout/fragment_all_news" />
</navigation>