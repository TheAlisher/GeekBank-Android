<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFlowFragment">

        <action
            android:id="@+id/action_inputPinCodeFragment_to_biometricFragment"
            app:destination="@id/biometricFragment"
            app:popUpTo="@id/nav_graph" />
        <action
            android:id="@+id/action_inputPinCodeFragment_to_homeFragment"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/nav_graph"/>

    <fragment
        android:id="@+id/biometricFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.biometricauthentication.BiometricFragment"
        android:label="fragment_biometric"
        tools:layout="@layout/fragment_biometric" >
        <action
            android:id="@+id/action_biometricFragment_to_homeFragment2"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/nav_graph"/>
    </fragment>
    <action
            android:id="@+id/action_biometricFragment_to_homeFragment"
            app:destination="@id/navigation_home" />

    <fragment
        android:id="@+id/cardDetailFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.cardDetail.CardDetailFragment"
        android:label="fragment_card_detail"
        tools:layout="@layout/fragment_card_detail" >
        <action
            android:id="@+id/action_cardDetailFragment_to_exchangeFragment"
            app:destination="@id/exchangeFragment" />
        <action
            android:id="@+id/action_cardDetailFragment_to_qrFragment"
            app:destination="@id/qrFragment" />
        <action
            android:id="@+id/action_cardDetailFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_cardDetailFragment_to_paymentsFragment"
            app:destination="@id/paymentsFragment" />
        <action
            android:id="@+id/action_cardDetailFragment_to_transferFragment"
            app:destination="@id/transferFragment" />
        <action
            android:id="@+id/action_cardDetailFragment_to_settingsFragment2"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_cardDetailFragment_to_cardFragment"
            app:destination="@id/cardFragment" />
        <action
            android:id="@+id/action_cardDetailFragment_to_freezeDialogFragment"
            app:destination="@id/freezeDialogFragment" />

    </fragment>
    <fragment
        android:id="@+id/exchangeFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.exchange.ExchangeFragment"
        android:label="fragment_exchange"
        tools:layout="@layout/fragment_exchange" />
    <fragment
        android:id="@+id/mainFlowFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.main.MainFlowFragment"
        android:label="flow_fragment_main"
        tools:layout="@layout/flow_fragment_main" />
    <fragment
        android:id="@+id/signFlowFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.sign.SignFlowFragment"
        android:label="flow_fragment_sign"
        tools:layout="@layout/flow_fragment_sign">
        <action
            android:id="@+id/action_signFlowFragment_to_mainFlowFragment"
            app:destination="@id/mainFlowFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <dialog
        android:id="@+id/freezeDialogFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.freezeCard.FreezeDialogFragment"
        android:label="fragment_freeze_dialog"
        tools:layout="@layout/fragment_freeze_dialog" />
</navigation>