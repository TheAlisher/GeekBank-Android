<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_cardFragment"
            app:destination="@id/cardFragment"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/cardFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.home.cards.CardFragment"
        android:label="fragment_card"
        tools:layout="@layout/fragment_card" >
        <action
            android:id="@+id/action_cardFragment_to_homeFragment2"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_cardFragment_to_cardDetailFragment"
            app:destination="@id/cardDetailFragment" />
    </fragment>
        <action
            android:id="@+id/action_cardFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    <fragment
        android:id="@+id/pinCodeFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.pincode.CreatePinCodeFragment"
        android:label="fragment_pin_code"
        tools:layout="@layout/fragment_create_pin_code" >
        <action
            android:id="@+id/action_pinCodeFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"/>
    </fragment>
    <fragment
        android:id="@+id/inputPinCodeFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.pincode.InputPinCodeFragment"
        android:label="InputPinCodeFragment" >

        <action
            android:id="@+id/action_inputPinCodeFragment_to_biometricFragment"
            app:destination="@id/biometricFragment"
            app:popUpTo="@id/nav_graph" />
        <action
            android:id="@+id/action_inputPinCodeFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"/>
    </fragment>
    <fragment
        android:id="@+id/biometricFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.biometricauthentication.BiometricFragment"
        android:label="fragment_biometric"
        tools:layout="@layout/fragment_biometric" >
        <action
            android:id="@+id/action_biometricFragment_to_homeFragment2"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"/>
    </fragment>
    <action
            android:id="@+id/action_biometricFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

    <fragment
        android:id="@+id/cardDetailFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.cardDetail.CardDetailFragment"
        android:label="fragment_card_detail"
        tools:layout="@layout/fragment_card_detail" >
        <action
            android:id="@+id/action_cardDetailFragment_to_exchangeFragment"
            app:destination="@id/exchangeFragment" />
        <action
            android:id="@+id/action_cardDetailFragment_to_qrFragment"
            app:destination="@id/qrFragment" />
        <action
            android:id="@+id/action_cardDetailFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_cardDetailFragment_to_paymentsFragment"
            app:destination="@id/paymentsFragment" />
        <action
            android:id="@+id/action_cardDetailFragment_to_transferFragment"
            app:destination="@id/transferFragment" />
        <action
            android:id="@+id/action_cardDetailFragment_to_settingsFragment2"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/exchangeFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.exchange.ExchangeFragment"
        android:label="fragment_exchange"
        tools:layout="@layout/fragment_exchange" />
    <fragment
        android:id="@+id/paymentsFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.payments.PaymentsFragment"
        android:label="fragment_payments"
        tools:layout="@layout/fragment_payments" />
    <fragment
        android:id="@+id/qrFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.qrCode.QrFragment"
        android:label="fragment_qr"
        tools:layout="@layout/fragment_qr" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/transferFragment"
        android:name="com.alish.geekbank.presentation.ui.fragments.transfer.TransferFragment"
        android:label="fragment_transfer"
        tools:layout="@layout/fragment_transfer" >
        <action
            android:id="@+id/action_transferFragment_to_cardDetailFragment"
            app:destination="@id/cardDetailFragment" />
    </fragment>
</navigation>